#!/usr/bin/env bash
#Install and configure HAproxy on your lb-01 server.
sudo apt-get install software-properties-common
sudo add-apt-repository ppa:vbernat/haproxy-2.0
sudo apt-get update
sudo apt-get install haproxy=2.0.\*
sudo service haproxy start
echo -e "\nfrontend http\n\tbind *:80\n\tmode http\n\tdefault_backend web-backend" >> /etc/haproxy/haproxy.cfg
echo -e "\nbackend web-backend\n\tbalance roundrobin\n\tserver 784-web-01 104.196.160.153:80 check\n\tserver 784-web-02 35.196.200.9:80 check" >> /etc/haproxy/haproxy.cfg
sudo service haproxy restart
